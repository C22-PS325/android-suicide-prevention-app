<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuicidePreventiveApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shade_cyan</item>
        <item name="colorPrimaryVariant">@color/medium_light_shade_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shade_cyan</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="title_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/benjamin_moore</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_title_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#489FB5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_content_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/benjamin_moore</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="image_corner_radius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="card_button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/benjamin_moore</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="desc_10sp">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/benjamin_moore</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="clickable_text_red">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="clickable_text_shade_cyan">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/shade_cyan</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>